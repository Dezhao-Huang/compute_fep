# created by fftool

units real
boundary p p p

atom_style full
bond_style harmonic
angle_style harmonic
special_bonds lj/coul 0.0 0.0 0.5

read_data data.1.lmp
# read_restart restart.*.lmp
# reset_timestep 0

pair_style hybrid lj/cut/coul/long 10.0 10.0 lj/cut/coul/long/soft 10.0 10.0
pair_modify tail no
kspace_style pppm 1.0e-4

pair_coeff    1    1  lj/cut/coul/long    0.0660   3.5000  # C4H C4H
pair_coeff    1    2  lj/cut/coul/long    0.0445   2.9580  # C4H H
pair_coeff    2    2  lj/cut/coul/long    0.0300   2.5000  # H H
pair_coeff    3    3  lj/cut/coul/long    0.0000   1.0000  # Hw Hw
pair_coeff    3    4  lj/cut/coul/long    0.0000   1.0000  # Hw Ow
pair_coeff    4    4  lj/cut/coul/long    0.1554   3.1655  # Ow Ow

pair_coeff    1    3  lj/cut/coul/long/soft    0.0000   1.0000  1.0  # C4H Hw
pair_coeff    1    4  lj/cut/coul/long/soft    0.1013   3.3286  1.0  # C4H Ow
pair_coeff    2    3  lj/cut/coul/long/soft    0.0000   1.0000  1.0  # H Hw
pair_coeff    2    4  lj/cut/coul/long/soft    0.0683   2.8131  1.0  # H Ow

variable nsteps equal 5000000
variable nprint equal ${nsteps}/500
variable ndump equal ${nsteps}/100
# variable nrestart equal ${nsteps}/10

variable temp equal 300.0
variable press equal 1.0

neighbor 2.0 bin

timestep 2.0

# velocity all create ${temp} 12345

thermo_style multi
thermo ${nprint}

fix fSHAKE all shake 0.0001 20 ${nprint} b 2 a 2

fix fNPT all npt temp ${temp} ${temp} 100 iso ${press} ${press} 500

run 100000

reset_timestep 0

variable lambda equal ramp(1.0,0.0)
variable lam13 equal v_lambda
variable lam14 equal v_lambda
variable lam23 equal v_lambda
variable lam24 equal v_lambda

fix fADAPT all adapt 125000 &
  pair lj/cut/coul/long/soft lambda 1 3 v_lam13 &
  pair lj/cut/coul/long/soft lambda 1 4 v_lam14 &
  pair lj/cut/coul/long/soft lambda 2 3 v_lam23 &
  pair lj/cut/coul/long/soft lambda 2 4 v_lam24 &
  after yes

variable dlambda equal -0.002
variable dlam13 equal v_dlambda
variable dlam14 equal v_dlambda
variable dlam23 equal v_dlambda
variable dlam24 equal v_dlambda

compute cFEP all fep ${temp} &
  pair lj/cut/coul/long/soft lambda 1 3 v_dlam13 &
  pair lj/cut/coul/long/soft lambda 1 4 v_dlam14 &
  pair lj/cut/coul/long/soft lambda 2 3 v_dlam23 &
  pair lj/cut/coul/long/soft lambda 2 4 v_dlam24

fix fFEP all ave/time 25 4000 125000 c_cFEP[1] c_cFEP[2] file fdti10.lmp

# compute cRDF all rdf 100 1 1
# fix fRDF all ave/time 20 100 ${nsteps} c_cRDF file rdf.lammps mode vector

compute cMSD all msd
fix fMSD all ave/time 1 1 ${ndump} c_cMSD[1] c_cMSD[2] c_cMSD[3] c_cMSD[4] file msd.lammps

dump dCONF all custom ${ndump} dump.lammpstrj id mol type element x y z ix iy iz
dump_modify dCONF element C H H O

# restart ${nrestart} restart.*.lmp

run ${nsteps}

write_restart restart.*.lmp
write_data data.*.lmp
